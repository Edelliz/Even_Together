@model Backend3.Models.EventViewModel
@using Backend3.Storage
@using Microsoft.AspNetCore.Identity
@inject UserManager<User> UserManager

@section Styles {
<link href="~/css/EventDetails.css" rel="stylesheet" type="text/css" asp-append-version="true" />
}



@{
    String DateOfEvent = @Model.Date.Day + "." + @Model.Date.Month + "." + @Model.Date.Year + " " + @Model.Date.Hour + ":" + @Model.Date.Minute;
    ViewData["Title"] = "Details";

}

<h3>@Model.Title</h3>

<h6>Адрес встречи: <b>@Model.Place</b>, Дата встречи: @DateOfEvent, Стоимость: @Model.Price</h6>

@if (User.IsInRole(ApplicationRoleNames.User))
{
    <div class="d-flex justify-content-start">
        <button id="btn-buy-ticket" type="button" class="btn btn-primary m-2" data-bs-toggle="modal" data-bs-target="#exampleModal">Купить билет</button>

        <form method="post" asp-action="FindCompany" asp-route-id="@Model.Id" class="m-2">
            <input type="submit" value="Найти компанию" class="btn btn-dark end-0" />
        </form>

        <button id="btn-buy-ticket" type="button" class="btn btn-primary m-2" data-bs-toggle="modal" data-bs-target="#createGroupModal">Создать группу</button>


    </div>
}

else if (User.IsInRole(ApplicationRoleNames.Organizer) && UserManager.GetUserName(User) == Model.Organizer)
{
    <div class="d-flex justify-content-start">
        <a id="btn-buy-ticket" asp-action="Edit" asp-route-id="@Model.Id">Редактировать мероприятие</a>
    </div>
}

<div class="modal fade" id="createGroupModal" tabindex="-1" aria-labelledby="createGroupModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createGroupModalLabel">Заполните информацию о вашей группе</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row d-flex justify-content-center">
                    <div class="col-md-4">
                        <form asp-action="Create" asp-controller="Group" asp-route-eventId="@Model.Id" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label name="Title" class="control-label">Название</label>
                                <input name="Title" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label name="Description" class="control-label">Описание</label>
                                <input name="Description" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label name="Size" class="control-label">Размер группы</label>
                                <input name="Size" class="form-control" />
                            </div>

                            <div class="form-group">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <button type="submit" class="btn btn-outline-primary  mt-3">Создать</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Вы хотите купить билет на мероприятие: @Model.Title, которое состоится: @DateOfEvent, стоимость: @Model.Price?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отменить</button>
                <form method="post" asp-action="BuyTicket" asp-route-id="@Model.Id" class="m-2">
                    <input type="submit" value="Купить" class="btn btn-dark end-0" />
                </form>
            </div>
        </div>
    </div>
</div>


<div class="d-flex justify-content-center m-4">
    @if (String.IsNullOrEmpty(@Model.Poster))
    {
        <img id="event-@Model.Id-details" class="rounded" src="/files/imgplaceholder.png">
    }
    else
    {
        <img id="event-@Model.Id-details" class="rounded" src="/@Model.Poster">
    }
</div>

<div class="container">
    <div class="card">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs" data-bs-tabs="tabs">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="true" data-bs-toggle="tab" href="#info-event"><b>Информация о мероприятии</b></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" aria-current="true" data-bs-toggle="tab" href="#participants-event"><b>Люди, ищущие компанию</b></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" aria-current="true" data-bs-toggle="tab" href="#groups-event"><b>Группы</b></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#review-event"><b>Отзывы</b></a>
                </li>
            </ul>
        </div>
        <div class="card-body tab-content">
            <div class="tab-pane active" id="info-event">
                <p class="card-text">@Model.Description</p>
            </div>
            <div class="tab-pane" id="participants-event">
                <table class="w-100 h-100">
                    <tbody class="w-100">
                        @{
                            foreach (ShortUserViewModel user in Model.Searching)
                            {
                                <tr class="row w-100">
                                    <td class="col-4 cardsFeed p-3 bg-light rounded w-100">
                                        <div class="scale card w-100 d-flex flex-row align-items-baseline justify-content-between">
                                            <div class="d-flex flex-row">
                                                @if (String.IsNullOrEmpty(user.Avatar))
                                                {
                                                    <img id="user-@user.Id" class="short-users-avatar" src="/files/imgplaceholder.png">
                                                }
                                                else
                                                {
                                                    <img id="user-@user.Id" class="short-users-avatar" src="/@user.Avatar">
                                                }
                                                <a asp-controller="User" asp-action="Details" asp-route-id="@user.Id" class="h-100 d-flex align-self-center">
                                                    <h4 class="event-title card-title text-dark rounded-pill p-2">@user.Name</h4>
                                                </a>
                                            </div>
                                            @if (UserManager.GetUserId(User) != user.Id.ToString() && ViewBag.UserGroup != null)
                                            {
                                                if ((ViewBag.UserGroup as Group).Invitations.Any(x => x.UserId == user.Id))
                                                {
                                                    
                                                    var groupId = (ViewBag.UserGroup as Group).Id;

                                                    <form method="post" asp-controller="Group" asp-route-id="@Model.Id" asp-route-groupId="@groupId" asp-route-userId="@user.Id" asp-action="CancelInvitation">

                                                            <input type="submit" value="Отменить приглашение" class="me-3 d-flex align-self-center btn btn-danger text-light" />
                                                    
                                                    </form>

                                                }
                                                else
                                                {
                                                    <form method="post" asp-controller="Group" asp-action="SendInvitation">
                                                        <input name="userId" value="@user.Id" class="form-control" type="hidden" />
                                                        <input name="id" value="@Model.Id" class="form-control border-2 border-dark" type="hidden" />
                                                        <div class="form-group mt-3 w-100 text-end">
                                                            <input type="submit" value="Пригласить в группу" class="me-3 d-flex align-self-center btn btn-primary text-light" />
                                                        </div>
                                                    </form>

                                                }

                                            }
                                        </div>

                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>


            <div class="tab-pane" id="groups-event">
                <table class="w-100 h-100">
                    <tbody class="w-100">
                        @foreach (GroupViewModel group in Model.Groups)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => group.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => group.Description)
                                </td>
                                <td>
                                    <a asp-action="SendRequest" asp-route-userId="@UserManager.GetUserId(User)" asp-route-groupId="@group.Id">Присоединиться</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>


            <div class="tab-pane" id="review-event">
                <form method="post" asp-action="PostReview">
                    <input name="Text" class="form-control inputFields" />
                    <input name="EventId" value="@Model.Id" class="form-control border-2 border-dark" type="hidden" />
                    <div class="form-group mt-3 w-100 text-end">
                        <input type="submit" value="Комментировать" class="btnAddComment btn btn-dark end-0" />
                    </div>
                </form>

                <div class="blog-posts">
                    <div class="blog-posts-items">
                        @foreach (var item in Model.Reviews.OrderByDescending(x => x.Date))
                        {
                            <div class="blog-post panel panel-default rounded bg-light border border-2 border-dark mt-3 ">
                                <div class="panel-heading inputFields border-bottom border-1 border-dark  ps-2 pt-1 pb-1 w-100 d-flex flex-row justify-content-between">
                                    <div class="text-dark ps-2">@item.Owner.Email | @item.Date</div>
                                </div>
                                <div class="panel-body inputFields pt-2 pb-2 ps-4 ">
                                    <div class="blog-post-text inputFields text-dark">@item.Text</div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script src="~/js/detailsEvent.js" asp-append-version="true"></script>
}