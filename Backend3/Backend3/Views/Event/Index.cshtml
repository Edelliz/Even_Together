@model List<Backend3.Models.ShortEventViewModel>

@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center mt-4">

    <div id="carouselExampleIndicators" class="carousel slide d-flex justify-content-center" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner rounded w-75" style="height: 25rem;">
            <div class="carousel-item active h-100">
                <img src="./img/add3.jpg" class="d-block w-100 h-100" alt="...">
            </div>
            <div class="carousel-item h-100">
                <img src="./img/add2.jpg" class="d-block w-100 h-100" alt="...">
            </div>
            <div class="carousel-item h-100">
                <img src="./img/ad1.png" class="d-block w-100 h-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <h3 class="float-start mt-4 mb-3"> Главные события недели</h3>

    <table class="w-100 h-100">
        <tbody class="w-100">
            @{
                int index = 0;
                foreach (var item in Model)
                {
                    if(index % 3 == 0)
                    {
                        <tr class="row w-100 d-flex-column justify-content-between">
                        </tr>
                    }
                    <td class="col-4 cardsFeed p-3">
                        <a asp-action="Details" asp-route-id="@item.Id" class="scale card w-100">
                            @if (String.IsNullOrEmpty(@item.Poster))
                            {
                                <img id="event-@item.Id" class="card-img-top h-100" src="/files/imgplaceholder.png" alt="Card image">
                            }
                            else
                            {
                                <img id="event-@item.Id" class="card-img-top h-100" src="@item.Poster" alt="Card image">
                            }                        
                        <div class="card-img-overlay h-100 ">
                            <h4 class="event-title card-title text-light rounded-pill p-2">@item.Title</h4>
                        </div>
                    </a>     
                </td>

                index++;
                }
            }

        </tbody>
    </table>
</div>
