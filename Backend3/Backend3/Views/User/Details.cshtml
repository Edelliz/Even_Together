@model UserViewModel

@{
    String CorrectBirthDate = Model.BirthDate.Day + "." + Model.BirthDate.Month + "." + Model.BirthDate.Year;
}

<div class="row">
    <div class="col-4">
        @if (String.IsNullOrEmpty(@Model.Avatar))
        {
            <img id="user-@Model.Id" class="card-img-top h-100 p-3" src="/files/imgplaceholder.png" alt="Card image">
        }
        else
        {
            <img id="user-@Model.Id" class="card-img-top h-100 p-3"  src="@Model.Avatar" alt="Card image">
        }
    </div>
    <div class="col-8">
        <h4>@Model.Name</h4>
        <h5>@Model.Email</h5>
        <h6 class="mb-3">@CorrectBirthDate</h6>

        <div class="btn btn-primary">Написать сообщение</div>
    </div>
</div>

<h4>Мероприятия пользователя</h4>
